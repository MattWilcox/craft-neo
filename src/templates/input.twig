<input type="hidden" name="{{ name }}" value="">
<div id="{{ id }}" class="neo-input neo-input--{{ handle }}{{ static ? ' is-static' }}{{ translatable ? ' is-translatable' }}">
    <div class="ni_blocks" data-neo="container.blocks">
        {% for block in blocks %}
            {% if block.level == 1 %}
                {% include 'neo/block' with { block, static } only %}
            {% endif %}
        {% endfor %}
    </div>
    <div data-neo="container.buttons"></div>
</div>
